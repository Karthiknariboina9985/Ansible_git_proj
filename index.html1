<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Embedded Video</title>
    <style>
      /* Make the video responsive */
      .video-wrap { max-width: 960px; margin: 2rem auto; }
      video { width: 100%; height: auto; border-radius: 12px; }
    </style>
  </head>
  <body>
    <div class="video-wrap">
      <video
        controls
        controlslist="nodownload"
        preload="metadata"
        playsinline
        poster="poster.jpg"        <!-- optional: replace/remove -->
        aria-label="Video player"
      >
        <!-- Your primary MP4 -->
        <source src="dd955108-01ac-4da3-a248-5b6ebd0fea39.mp4" type="video/mp4" />

        <!-- (Optional) Provide alternate formats for wider compatibility -->
        <!-- <source src="video.webm" type="video/webm" /> -->
        <!-- <source src="video.ogv"  type="video/ogg"  /> -->

        <!-- (Optional but recommended) Captions/Subtitles -->
        <!-- Create a WebVTT file like captions.vtt and uncomment below -->
        <!-- <track kind="captions" src="captions.vtt" srclang="en" label="English" default /> -->

        <!-- Fallback content for very old browsers -->
        <p>
          Your browser doesnâ€™t support HTML video.
          <a href="dd955108-01ac-4da3-a248-5b6ebd0fea39.mp4" download>Download the video</a>.
        </p>
      </video>
    </div>
  </body>
</html>
